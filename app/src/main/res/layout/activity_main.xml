<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/toolbar"
                android:paddingTop="15dp"
                android:fitsSystemWindows="true"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/marker_info"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="10dp"
                >
                 <include layout="@layout/content_can_info"/>
            </android.support.v7.widget.CardView>
            <com.baidu.mapapi.map.MapView
                android:id="@+id/map"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                />

            <Button
                android:id="@+id/scan"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:text="扫码投放"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/my_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/scan"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:padding="10dp"
                android:elevation="2dp"
                android:background="@drawable/wbutton"
                app:srcCompat="@drawable/main_icon_location"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/scan"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/wbutton"
                android:padding="10dp"
                android:elevation="2dp"
                app:srcCompat="@drawable/main_icon_maplayers"/>
            <RelativeLayout
                android:id="@+id/ZoomControlView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="2dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/toolbar">

                <Button
                    android:id="@+id/zoomin"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dip"
                    android:layout_height="45dip"
                    android:textSize="18sp"
                    android:text="+"/>

                <Button
                    android:id="@+id/zoomout"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dip"
                    android:layout_height="45dip"
                    android:textSize="18sp"
                    android:layout_below="@+id/zoomin"
                    android:text="-"/>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav"
        android:fitsSystemWindows="true"
        android:layout_gravity = "start"
        app:menu="@menu/activity_main_drawer"
        app:headerLayout="@layout/nav_header_main"
        android:layout_height="match_parent"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

